@model Studfile.Models.ViewModels.SeminarDatumViewModels


@{
    ViewBag.Title = "Create";
}

<h2>Unos termina izlaganja seminara</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Odaberite termin izlaganja seminara i kolegij za koji dodajete termin.</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.seminarDatum.TerminIzlaganja, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.seminarDatum.TerminIzlaganja, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.seminarDatum.TerminIzlaganja, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.seminarDatum.KolegijId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.seminarDatum.KolegijId, new SelectList(Model.kolegiji, "Value", "Text"), new { @class = "form-control" })

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Spremi" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Natrag na ponuđene termine izlaganja", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
