@model IEnumerable<Studfile.Models.KolegijViewModel>

@{
    ViewBag.Title = "PopisKolegija";
}
<h2 class="h2">Popis kolegija</h2>

<table class="table">
    <tr class="th">
        <th>
            @Html.DisplayNameFor(model => model.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaksimalnaVelicinaGrupe)
        </th>
        <th></th>
    </tr>
    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naziv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaksimalnaVelicinaGrupe)
                </td>
                <td>
                    @Html.ActionLink("Pregled", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Uredi", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Obriši", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    }
    else
    {
        <tr><td colspan="3">Niste unijeli niti jedan kolegij</td></tr>
    }
</table>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="icon-bar">
    <a href="@Url.Action("Create", "Kolegij")"><i class="fa fa-book"><br /><span class="tekst">Unos kolegija</span></i></a>
    <a href="#"><i class="fa fa-user-plus"><br /><span class="tekst">Unos studenata</span></i></a>
    <a href="#"><i class="fa fa-pencil"><br /><span class="tekst">Unos teme</span></i></a>
    <a href="#"><i class="fa fa-calendar"><br /><span class="tekst">Unos termina</span></i></a>
    <a href="#"><i class="fa fa-table"><br /><span class="tekst">Odabrane teme</span></i></a>
</div>


